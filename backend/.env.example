# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration - PostgreSQL (for structured data)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=dogbreedersaas
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Database Configuration - MongoDB (for unstructured data)
MONGODB_URI=mongodb://localhost:27017/dogbreedersaas

# JWT Secret for Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# Email Configuration (for notifications and marketing)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=user@example.com
EMAIL_PASSWORD=your_email_password

# AWS S3 Configuration (for file/image storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_BUCKET_NAME=your-bucket-name
AWS_REGION=us-east-1

# Stripe API Keys (for payments)
STRIPE_PUBLIC_KEY=your_stripe_public_key
STRIPE_SECRET_KEY=your_stripe_secret_key

# Blockchain Configuration (optional)
BLOCKCHAIN_ENDPOINT=https://your-blockchain-provider.com
BLOCKCHAIN_API_KEY=your_blockchain_api_key

# OpenAI Configuration (for AI features)
OPENAI_API_KEY=your_openai_api_key

# IoT Configuration (optional)
IOT_HUB_CONNECTION_STRING=your_iot_hub_connection_string

# DocuSign Configuration
DOCUSIGN_INTEGRATION_KEY=your_docusign_integration_key
DOCUSIGN_USER_ID=your_docusign_user_id
DOCUSIGN_ACCOUNT_ID=your_docusign_account_id
DOCUSIGN_PRIVATE_KEY_LOCATION=./keys/docusign_private.key
DOCUSIGN_HMAC_KEY=your_docusign_hmac_key
DOCUSIGN_BASE_PATH=https://demo.docusign.net/restapi
DOCUSIGN_AUTH_SERVER=https://account-d.docusign.com
DOCUSIGN_OAUTH_BASE_PATH=account-d.docusign.com
DOCUSIGN_SCOPES=signature,impersonation
DOCUSIGN_REDIRECT_URI=http://localhost:3000/api/docusign/callback
DOCUSIGN_WEBHOOK_URL=http://localhost:5000/api/docusign/webhook
DOCUSIGN_JWT_EXPIRES_IN=3600
DOCUSIGN_IP_RANGES=

# Logging Configuration
LOG_LEVEL=info
